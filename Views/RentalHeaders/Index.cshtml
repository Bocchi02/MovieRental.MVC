@model IEnumerable<MovieRental.MVC.Models.RentalHeader>

@{
    ViewData["Title"] = "Index";
}

<h1>Rental Transactions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Rental Date</th>
            <th>Return Date</th>
            <th>Customer</th>
            <th>Movies</th> 
            <th>Status</th> 
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RentalDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ReturnDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Customer.Firstname) @Html.DisplayFor(modelItem => item.Customer.Lastname)</td>
                <td>
                    <ul>
                        @foreach (var detail in item.RentalHeaderDetails)
                        {
                            <li>@detail.Movie.Title</li> <!-- Display each movie rented -->
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var detail in item.RentalHeaderDetails)
                        {
                            <li>@detail.Status</li> <!-- Show Movie Status -->
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RentalHeaderId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RentalHeaderId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RentalHeaderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
